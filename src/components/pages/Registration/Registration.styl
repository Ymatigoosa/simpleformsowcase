.Registration
  margin: 0 auto;
  padding: 15px;
  width: 100%;
  max-width: 400px;
  box-sizing: border-box;

.Registration__header
  display: block;
  width: 100%;
  font-size: 18px;
  line-height: 1.3;
  text-align: center;
  margin-bottom: 20px;

.Registration__row
  margin-right: -15px;
  margin-left: -15px;
  position: relative;

.Registration__col50
  position: relative;
  float: left;
  width: 50%;
  box-sizing: border-box;
  padding-right: 10px;

  &:last-child
    padding-right: 0;

  @media (max-width: 400px)
    width: 100%;
    padding-right: 0;

.Registration__label
  color: #a1a1a1;
  text-transform: uppercase;
  display: block;
  font-size: 14px;
  margin-top: 20px;
  margin-bottom: 5px;

.Registration__input
  padding: 10px;
  width: 100%;
  border-radius: 5px;
  border: 1px solid #cccccc;
  font-size: 16px;
  display: block;
  box-sizing: border-box;
  background-color: white;
  position:relative;


  &:focus
    outline: none !important;
    border-color: #0a83fc;

  &_phone
    padding-left: 85px;

  &_ddactive
    z-index: 6;

.Registration__input-hint
  list-style-type: none;
  position: absolute;
  margin: -5px 0 0 0;
  padding: 0;
  width:100%;
  box-sizing: border-box;
  z-index: 5;
  background-color: white;
  border: 1px solid #cccccc;
  border-top: none;
  border-bottom-right-radius: 5px;
  border-bottom-left-radius: 5px;

  &_hidden
    display: none;

.Registration__input-hint-item
  padding: 10px;
  &_active
    background-color: #BDDEFF;

.Registration__phone-btn
  position: absolute;
  z-index: 4;
  width: 75px;
  margin-top: 1px;
  margin-left: 1px
  height: 44px;
  background-color: #f7f7f7;
  border-right: 1px solid #cccccc;
  padding: 10px;
  box-sizing: border-box;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;

  &_active
    background-color: #ffffff;
    z-index: 10;

.Registration_register-btn
  display: block;
  margin: 20px auto;
  background-color: #0a83fc;
  color: #ffffff;
  padding: 15px;
  border-radius: 5px;
  box-sizing: border-box;
  width: 200px;
  text-align: center;

  &:hover
    text-decoration: none;
    background-color: #409FFF;
